\begin_layout Title
FACC!
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
M=\left(1-\kappa\right)-\frac{k}{4d}D_{\mu}^{\dagger}D_{\mu}
\]

\end_inset


\begin_inset Formula 
\[
G=M^{-1}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\mathcal{H}=\mathcal{H}_{YM}+\mathcal{H}_{MOM}+\mathcal{H}_{AUX\,PH}+\mathcal{H}_{AUX\,MOM}
\]

\end_inset


\begin_inset Formula 
\[
\mathcal{H}_{MOM}=\frac{1}{2}{\rm Tr}\left[P_{\mu}^{\dagger}GP_{\mu}\right]
\]

\end_inset


\begin_inset Formula 
\[
\mathcal{H}_{AUX\,PH}=\frac{1}{2}{\rm Tr}\left[\phi^{\dagger}\phi\right]
\]

\end_inset


\begin_inset Formula 
\[
\mathcal{H}_{AUX\,MOM}=\frac{1}{2}{\rm Tr}\left[\pi^{\dagger}M^{2}\pi\right]
\]

\end_inset


\end_layout

\begin_layout Section
Equation of motion for FACC field-momenta
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\dot{\phi} & = & M^{2}\pi\\
\dot{\pi} & = & -\phi
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Section
Equation of motion for ordinary field-momenta
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray*}
\dot{U}_{\mu} & = & GP_{\mu}\cdot U_{\mu}\to U_{\mu}^{\prime}=e^{iGP_{\mu}\Delta t}U_{\mu}\\
\dot{P} & _{\mu}= & -\partial\mathcal{H}/\partial U_{\mu}=-\partial\mathcal{H}_{YM}/\partial U_{\mu}-\partial\mathcal{H}/\partial U_{\mu}
\end{eqnarray*}

\end_inset


\end_layout

\begin_layout Section
How to generate the momenta?
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\mathcal{H}_{mom}=\frac{1}{2}{\rm Tr}\left[x_{\mu}^{\dagger}x_{\mu}\right],\qquad x_{\mu}=M^{-1/2}P_{\mu}
\]

\end_inset


\begin_inset Formula 
\[
P_{\mu}=M^{1/2}x_{\mu}
\]

\end_inset


\end_layout

